<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/lightgray"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/rlChangeWaiter"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"
            android:text="Changing  waiter"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_waiter_icon"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:background="@color/graynew"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/rlTransferTable"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"
            android:text="Transfer Table"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_transfer_table"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:background="@color/graynew"
        android:layout_height="2dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/rlSplitTAble"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"
            android:text="Split Table"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_split_table"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/graynew"
        android:layout_height="2dp"/>




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/rlSwitchTable"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"
            android:text="Switch Table"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_transfer_table"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/graynew"
        android:layout_height="2dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/rlPrintNotes"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"
            android:text="Print Notes"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_print_notes"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:background="@color/graynew"
        android:layout_height="2dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/rlDiscount"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"
            android:text="Discount"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_discount"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:background="@color/graynew"
        android:layout_height="2dp"/>




</LinearLayout>